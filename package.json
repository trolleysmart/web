{
  "name": "trolley-smart-web",
  "description": "Trolley Smart Web",
  "version": "0.1.1",
  "author": {
    "name": "Micro Business Ltd",
    "email": "micro.business.ltd@gmail.com",
    "url": "http://www.micro-business.co.nz"
  },
  "private": true,
  "dependencies": {
    "admin-on-rest": "^1.3.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router": "^4.2.0"
  },
  "devDependencies": {
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "flow-bin": "^0.57.3",
    "husky": "^0.14.3",
    "jest-enzyme": "^4.0.1",
    "lint-staged": "^4.3.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "react-scripts": "1.0.15",
    "react-test-renderer": "^16.0.0",
    "source-map-explorer": "^1.5.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "git add"
    ]
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "precommit": "lint-staged",
    "flow": "flow",
    "analyze": "source-map-explorer build/static/js/main.*",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "pre-commit": "lint:staged",
  "repository": {
    "url": "git@bitbucket.org:microbusiness/trolley-smart-web.git",
    "type": "git"
  }
}
